---
import HeadCommon from '../components/HeadCommon.astro';
import { ACTIVITIES } from '../config';

const base = import.meta.env.BASE_URL;
---

<html lang="en" class="dark">
  <head>
    <HeadCommon />
    <title>JamDojo - Interactive Music Learning</title>
  </head>
  <body class="min-h-screen bg-background m-0 p-0">
    <div class="max-w-6xl mx-auto px-6 py-12">
      <header class="text-center mb-12">
        <h1 class="text-5xl font-bold text-foreground mb-4">JamDojo</h1>
        <p class="text-xl text-gray-400">Interactive music learning tools</p>
      </header>

      {ACTIVITIES.map((section) => (
        <section class="mb-12">
          <h2 class="text-2xl font-bold text-foreground mb-6 flex items-center gap-3">
            <span class="text-3xl">{section.icon}</span>
            {section.title}
          </h2>
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-4">
            {section.items.map((item) => (
              <a
                href={`${base}${item.link}/`}
                class="group block p-5 bg-lineHighlight rounded-xl border border-lineHighlight hover:border-cyan-500 transition-all duration-200 hover:scale-[1.02]"
              >
                <div class="flex items-center gap-3 mb-2">
                  <span class="text-2xl">{item.icon}</span>
                  <h3 class="text-lg font-bold text-foreground group-hover:text-cyan-400 transition-colors">
                    {item.text}
                  </h3>
                </div>
                <p class="text-gray-400 text-sm">{item.description}</p>
              </a>
            ))}
          </div>
        </section>
      ))}

      <footer class="mt-16 text-center text-gray-500 text-sm space-y-2">
        <p>Built with <a href="https://strudel.cc" target="_blank" rel="noopener" class="text-cyan-500 hover:underline">Strudel</a> - a live coding music environment</p>
        <p class="text-xs">
          <a href="https://github.com/kimjune01/jamdojo" target="_blank" rel="noopener" class="text-cyan-500 hover:underline">JamDojo Source</a> |
          Strudel by Alex McLean & contributors |
          <a href="https://github.com/tidalcycles/strudel" target="_blank" rel="noopener" class="text-cyan-500 hover:underline">Strudel Source (AGPL-3.0)</a>
        </p>
      </footer>
    </div>
  </body>
</html>
